@model DrankenDenHaasWebApp.OrderViewModel

@{
  //  Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Order</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.BestelId)
    
            <div class="form-group">
                @Html.LabelFor(model => model.Id, "Id", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Id", String.Empty)
                    @Html.ValidationMessageFor(model => model.Id)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.DatumVanBestelling, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DatumVanBestelling)
                    @Html.ValidationMessageFor(model => model.DatumVanBestelling)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.Totaalprijs, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Totaalprijs)
                    @Html.ValidationMessageFor(model => model.Totaalprijs)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.IsBetaald, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IsBetaald)
                    @Html.ValidationMessageFor(model => model.IsBetaald)
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
