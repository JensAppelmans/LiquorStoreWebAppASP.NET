@model IEnumerable<DrankenDenHaasWebApp.CategoryViewModel>
@using DrankenDenHaasWebApp.Translations


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink(Texts.CategoryNew, "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categorienaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beschrijving)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Categorienaam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Beschrijving)
                </td>
                <td>
                    @Html.ActionLink(Texts.Edit, "Edit", new { id = item.CategorieId }) |
                    @Html.ActionLink(Texts.Details, "Details", new { id = item.CategorieId }) |
                    @Html.ActionLink(Texts.Delete, "Delete", new { id = item.CategorieId })
                </td>
            </tr>
        }

    </table>
</body>
</html>
