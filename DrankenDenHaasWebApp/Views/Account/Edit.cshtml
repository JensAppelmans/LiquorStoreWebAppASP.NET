@model DrankenDenHaasWebApp.Models.AccountDetailViewModel
@using DrankenDenHaasWebApp.Translations;

@{
    ViewBag.Title = "Edit";
}
<div class="text-center">
    <div class="row">
        <i class="far fa-user-circle fa-3x"></i>
        @if (DrankenDenHaasWebApp.Models.AccountDetailViewModel.justRegistered != true)
        {
        <h2>Edit</h2>
        }
        else
        {
            <h2>Gelieve u account te vervolledigen!</h2>
        }
    </div>
</div>

@using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { role =  "form" }))
{
    @Html.AntiForgeryToken()



<div class="form-horizontal">

    <hr />
    <div class="row">
        <div class="col-md-offset-4">
            <div class="col-lg-offset-1">
                @if (DrankenDenHaasWebApp.Models.AccountDetailViewModel.justRegistered != true)
                {
                    @Html.ActionLink(Texts.BackToList, "Details", new { id = Model.UserId })
                }
                </div>

            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.Usernaam)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Usernaam)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.IsZakelijk)
                </dt>

                <dd>
                    @{ if (Model.IsZakelijk == true)
                        {
                            <p>@Texts.Yes</p>
                        }
                        else
                        {
                            <p>@Texts.No</p>
                        }
                    }
                </dd>
            </dl>


        </div>
    </div>


    <div class="row">
        <div class="col-md-7">

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>

            @{ if (Model.IsZakelijk != true)
                {

                    <div class="form-group">
                        @Html.LabelFor(model => model.Voornaam, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Voornaam)
                            @Html.ValidationMessageFor(model => model.Voornaam)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Achternaam, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Achternaam)
                            @Html.ValidationMessageFor(model => model.Achternaam)
                        </div>
                    </div>
                }
            }
            <div class="form-group">
                @Html.LabelFor(model => model.Telefoon, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Telefoon)
                    @Html.ValidationMessageFor(model => model.Telefoon)
                </div>
            </div>

            @{ if (Model.IsZakelijk == true)
                {

                    <div class="form-group">
                        @Html.LabelFor(model => model.BTW_nummer, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.BTW_nummer)
                            @Html.ValidationMessageFor(model => model.BTW_nummer)
                        </div>
                    </div>
                }
            }
            @*<div class="form-group">
            @Html.LabelFor(model => model.TaalId, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.TaalId)
                @Html.ValidationMessageFor(model => model.TaalId)
            </div>
        </div>*@
            <div class="form-group">
                @Html.LabelFor(m => m.TaalId, new { @class = "col-md-3 control-label" })
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.TaalId, (SelectList)ViewBag.Languages, new { @class = "form-control" , style = "width:165px; "})
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.Land, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Land)
                    @Html.ValidationMessageFor(model => model.Land)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Provincie, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Provincie)
                    @Html.ValidationMessageFor(model => model.Provincie)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Stad, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Stad)
                    @Html.ValidationMessageFor(model => model.Stad)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Postcode, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Postcode)
                    @Html.ValidationMessageFor(model => model.Postcode)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Straatnaam, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Straatnaam)
                    @Html.ValidationMessageFor(model => model.Straatnaam)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Nummer_Bus, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Nummer_Bus)
                    @Html.ValidationMessageFor(model => model.Nummer_Bus)
                </div>
            </div>
        </div>
    </div>
    @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.HiddenFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.UserId)
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.PasswordHash, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.PasswordHash)
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.SecurityStamp, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.SecurityStamp)
            </div>
        </div>


        <div class="form-group">
            @Html.HiddenFor(model => model.Usernaam, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Usernaam)
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.IsZakelijk, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.IsZakelijk)
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.AdresId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.AdresId)
            </div>
        </div>

    <div class="form-group">
        <div class="col-md-offset-5 col-md-7">
            <input type="submit" value="Save" class="btn btn-danger btn-lg"  />
        </div>
    </div>
</div>
}

