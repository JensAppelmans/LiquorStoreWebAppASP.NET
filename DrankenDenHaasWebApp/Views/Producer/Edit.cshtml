@model DrankenDenHaasWebApp.ProducerViewModel
@using DrankenDenHaasWebApp.Translations
@{
    //  Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h3>Producer</h3>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ProducentId)

            <div class="form-group">
                @Html.LabelFor(model => model.ProducentNaam, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProducentNaam)
                    @Html.ValidationMessageFor(model => model.ProducentNaam)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Land, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Land)
                    @Html.ValidationMessageFor(model => model.Land)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink(Texts.BackToList, "Index")
    </div>
</body>
</html>
