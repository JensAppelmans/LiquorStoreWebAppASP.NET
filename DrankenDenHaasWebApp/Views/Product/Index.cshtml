@model IEnumerable<DrankenDenHaasWebApp.ProductViewModel>
@using DrankenDenHaasWebApp.Translations

@{
    //   Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="text-center">
        <h2 >Productoverzicht</h2>
        <p>
            @Html.ActionLink(Texts.ProductNew, "Create")
        </p>
    </div>
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Productnaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prijs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beschrijving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlcoholPercentage___)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inhoud_cl_)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VerkochtPer)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Categorienaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producentnaam)
            </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @if (item.ImagePath != null)
                {

                    <img class="img-responsive" src="@Url.Content(item.ImagePath)" height="250" width="250" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Productnaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prijs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beschrijving)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlcoholPercentage___)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inhoud_cl_)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VerkochtPer)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Categorienaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producentnaam)
            </td>*@
            <td>
                @Html.ActionLink(Texts.Edit, "Edit", new { id = item.ProductId }) |
                @Html.ActionLink(Texts.Details, "Details", new { id = item.ProductId }) |
                @Html.ActionLink(Texts.Delete, "Delete", new { id = item.ProductId })
            </td>
        </tr>
        }

    </table>
</body>
</html>
